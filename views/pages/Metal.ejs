<html>
<head>
    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Siri Constructions Inventory Tool</title>
    <!--<link href="Content/css/Site.css" rel="stylesheet" />-->
    <link href="Content/css/bootstrap.css" rel="stylesheet" />
    <script src="Scripts/jquery-1.9.1.js"></script>
    <script src="Scripts/bootstrap.js"></script>
	 
    <link href="Content/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2017.3.913/styles/kendo.common.min.css">
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2017.3.913/styles/kendo.rtl.min.css">
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2017.3.913/styles/kendo.silver.min.css"/>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2017.3.913/styles/kendo.mobile.all.min.css">

    <script src="https://code.jquery.com/jquery-1.12.3.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2017.3.913/js/kendo.all.min.js"></script>
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2017.3.913/styles/kendo.default.min.css">
<script src="https://kendo.cdn.telerik.com/2017.3.913/js/angular.min.js"></script>
<script src="https://kendo.cdn.telerik.com/2017.3.913/js/jszip.min.js"></script>
    <script type="text/javascript">
        $(window).load(function () {
            $("#loading").fadeOut("slow");
        });
    </script>
    <style>
        .k-header.k-grid-toolbar
        {
            width:200px;
            height:25px;
            font:bold;
        }
        .k-grid td {
            padding: 0;
            text-align:center;
        }
		
    </style>
	
	
</head>

<body>

    <div class="row">
        <div class="col-sm-3">
		 <% include ../partials/leftMenu %>
        </div>
        <div class="col-sm-9">
		<% include ../partials/header %>
		<h3>Receivables</h3>
		<h3>Metal</h3>
		<div id="grid"></div>
		<h3>Consumption</h3>
		<h5>Budget Qty:</h5>
		<h5>Actual Qty:</h5>
		<div id="gridConsumption"></div>
        </div>
    </div>
    <script>
        $(document).ready(function () {

		var dataSource = new kendo.data.DataSource({
                transport: {
                    read: function (e) {
						$.ajax({url: "/services/RawMaterialGroup2", type:"get",data:{groupId:7},
							success: function(result){
								var rawMaterials = result.RawMaterials;
								 e.success(rawMaterials);
							}
						});
                    },
                    create: function (e) {
					e.data.GroupId=7;
						$.ajax({url: "/services/RawMaterialGroup2/Create", type:"POST",
							data:e.data,
							success: function(result){
								e.success();
							}
						});						 
                    },
                    update: function (e) {
					e.data.GroupId=7;
						$.ajax({url: "/services/RawMaterialGroup2/Update", type:"POST",
							data:e.data,
							success: function(result){
								e.success();
							}
						});
                    },
                    destroy: function (e) {
					$.ajax({url: "/services/RawMaterialGroup2/Delete", type:"POST",
							data:e.data,
							success: function(result){
								e.success();
							}
						});
                        // locate item in original datasource and remove it
                        
                        // on failure
                        //e.error("XHR response", "status code", "error message");
                    }
                },
                error: function (e) {
                    // handle data operation error
                    alert("Status: " + e.status + "; Error message: " + e.errorThrown);
                },
		
        schema: {
			model: {
			id: "DCNo",
				fields: {
					DCNo: { editable:false },
					Date: { type: "date",validation: { required: true} },
					Particulars: { defaultValue: { Id: 0, ParticularsName: "-Select-"} },
					Qty: { defaultValue: { Id: 0, Qty: "-Select-"} },
					Location: { defaultValue: { Id: 0, LocationName: "-Select-"} },
					Chinage: { type: "text",validation: { required: true} },
					SiteName: { type: "text",validation: { required: true}},
					SupplierName: { type: "text",validation: { required: true} },
					VehicleNo: { type: "text",validation: { required: true} },
					TransporterName: { type: "text",validation: { required: true} },
					GroupId: { type: "number"},
					}
				}
			},
        pageSize: 20
        });

		$("#grid").kendoGrid({
		dataSource: dataSource,
        height: 350,
        scrollable: true,
        sortable: true,
        pageable: {
        input: true,
        numeric: false
        },
        toolbar: ["create"],
        columns: [
		
		{
        field: "Date",
        title: "Date",
        width: 90,
        height:25,
		template: "#= kendo.toString(kendo.parseDate(Date, 'yyyy-MM-dd'), 'dd/MM/yyyy') #"
        },
		{
        field: "DCNo",
        title: "DCNo",
        width: 70
        },
        {
        field: "Particulars",
        title: "Particulars",
        width: 100,editor: particularsDropDownEditor, template: "#=Particulars.ParticularsName#"
        },
		{
        field: "SiteName",
        title: "Site Name",
        height: 25,
        width: 100
        },
		{
        field: "SupplierName",
        title: "Supplier Name",
        height:25,
        width: 110
        },

        {
        field: "Qty",
        title: "Qty  in Units",
        height: 25,
        width: 100,editor: QtyEditor, template: "#=Qty.Qty#"
        }, 
        {
        field: "Location",
        title: "Location",
        height: 25,
        width: 100,editor: Locations, template: "#=Location.LocationName#"
        },
		
        {
        field: "Chinage",
        title: "Chinage",
        height: 25,
        width: 80
        },
		
        {
        field: "VehicleNo",
        title: "Vehicle No",
        height: 25,
        width: 100
        },
		
        {
        field: "TransporterName",
        title: "Transporter Name",
        height: 25,
        width: 160
        },
        
        { command: ["edit","destroy"], 
		
		title: "&nbsp;", width: "120px" 
		
		}],
        editable: "inline"
                    });

					//Consumption grid
			var dataSourceConsumption = new kendo.data.DataSource({
                transport: {
                    read: function (e) {
                        $.ajax({
                            url: "/services/RawMaterialGroup2Consumed", type: "get", data: { groupId: 12 },
                            success: function (result) {
                                var rawMaterials = result.RawMaterials;
                                e.success(rawMaterials);
                            }
                        });
                    },
                    create: function (e) {
                        e.data.GroupId = 12;
                        $.ajax({
                            url: "/services/RawMaterialGroup2Consumed/Create", type: "POST",
                            data: e.data,
                            success: function (result) {
                                e.success();
                            }
                        });
                    },
                    update: function (e) {
                        e.data.GroupId = 12;
                        $.ajax({
                            url: "/services/RawMaterialGroup2Consumed/Update", type: "POST",
                            data: e.data,
                            success: function (result) {
                                e.success();
                            }
                        });
                    },
                    destroy: function (e) {
                        $.ajax({
                            url: "/services/RawMaterialGroup2Consumed/Delete", type: "POST",
                            data: e.data,
                            success: function (result) {
                                e.success();
                            }
                        });
                    }
                },
                error: function (e) {
                    alert("Status: " + e.status + "; Error message: " + e.errorThrown);
                },

                schema: {
                    model: {
                         id: "MaterialsGroup2ConsumedId",
                        fields: {
                            MaterialsGroup2ConsumedId: { type: "number" },
                            Date: { type: "date", validation: { required: true } },
                            Particulars: { defaultValue: { Id: 0, ParticularsName: "-Select-"} },
							IssuedBy: { type: "text", validation: { required: true } },
                            Qty: { type: "number", validation: { required: true } },
                            SiteName: { type: "text", validation: { required: true } },
                            Chinage: { type: "text", validation: { required: true } },
                            Location: { defaultValue: { Id: 0, LocationName: "-Select-"} },
                            ClosingQty: { type: "number", validation: { required: true } },
                            GroupId: { type: "number" },
							}
                    }
                },
                pageSize: 20
            });

            $("#gridConsumption").kendoGrid({
                dataSource: dataSourceConsumption,
                height: 350,
                scrollable: true,
                sortable: true,
                pageable: {
                    input: true,
                    numeric: false
                },
                toolbar: ["create"],
                columns: [
                {
                    field: "Date",
                    title: "Date",
                    width: 70,
                    height: 25,
                    template: "#= kendo.toString(kendo.parseDate(Date, 'yyyy-MM-dd'), 'dd/MM/yyyy') #"
                },
                {
                    field: "Particulars",
                    title: "Particulars",
                    width: 70,editor: particularsDropDownEditor, template: "#=Particulars.ParticularsName#"
                },
				{
                    field: "SiteName",
                    title: "Site Name",
                    height: 25,
                    width: 70
                }, 
				{
                    field: "IssuedBy",
                    title: "Issued By",
                    height: 25,
                    width: 60
                },
                {
                    field: "Qty",
                    title: "Qty",
                    height: 25,
                    width: 80
                },
                {
                    field: "Location",
                    title: "Location",
                    height: 25,
                    width: 60,editor: Locations, template: "#=Location.LocationName#"
                },
				{
                    field: "Chinage",
                    title: "Chinage",
                    height: 25,
                    width: 60
                },
				{
                    field: "ClosingQty",
                    title: "Closing Qty",
                    height: 25,
                    width: 80
                },
                {
                    command: ["edit", "destroy"],
                    title: "&nbsp;", width: "120px"
                }],
                editable: "inline"
            });
					
        });

		function particularsDropDownEditor(container, options) {
            $('<input name="' + options.field + '"/>')
                .appendTo(container)
                .kendoDropDownList({
                    autoBind: false,
                    dataTextField: "ParticularsName",
                    dataValueField: "Id",
                    dataSource: {
						transport: {
                                    read: function (e) {
									$.ajax({url: "/services/particularsMasterByGroupId", type:"get",data:{groupId:7},
										success: function(result){
											var particularsMasterInfo = result.particularsMaster;
											e.success(particularsMasterInfo);
							        }
							    });
							},
						}
                    }
                });
             }

		function Locations(container, options) {
            $('<input name="' + options.field + '"/>')
                .appendTo(container)
                .kendoDropDownList({
                    autoBind: false,
                    dataTextField: "LocationName",
                    dataValueField: "Id",
                    dataSource: {
						transport: {
                                    read: function (e) {
									$.ajax({url: "/services/locations", type:"get",
										success: function(result){
											var LocationNames = result.LocationNames;
											e.success(LocationNames);
							        }
							    });
							},
						}
                    }
                });
             }
		var qtyValues = [{Id:1,Qty: 1},{Id:2,Qty: 2},{Id:3,Qty: 3},{Id:4,Qty: 4},{Id:5,Qty: 5}];
		function QtyEditor(container, options) {
            $('<input name="' + options.field + '"/>')
                .appendTo(container)
                .kendoDropDownList({
				dataTextField: "Qty",
                    dataValueField: "Id",
                    dataSource: {
						data:qtyValues
                    }
                });
             }
    </script>

</body>
</html>